{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "moj/components/side-navigation/macro.njk" import mojSideNavigation %}
{% from "moj/components/sub-navigation/macro.njk" import mojSubNavigation %}
{% from "components/profile-banner/macro.njk" import profileBanner %}

{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - " + sectionHeading %}
{% set mainClasses = "govuk-body govuk-!-padding-top-0" %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back to residents list",
    href: "#"
  }) }}
{% endblock %}

{% block content %}

  {{ profileBanner(resident) }}

  {{ mojSubNavigation({
    items: subNavArray
  }) }}

  <h2 class="govuk-heading-l">Placement information</h2>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-quarter">
    {{ mojSideNavigation({
      items: sideNavArray
    }) }}
  </div>

  <div class="govuk-grid-column-three-quarters">
    <h3 class="govuk-heading-m govuk-!-margin-bottom-4 govuk-!-margin-top-4">{{ sectionHeading }}</h3>

    {% if previousApStays %}
      {% for stay in previousApStays %}
        <article class="result-card">
          <header class="result-card__header">
            <h2 class="govuk-heading-s govuk-!-margin-bottom-0">
              {{ stay.name }}
            </h2>
          </header>

          <div class="result-card__body">
              {{ govukSummaryList({
                rows: stay.summaryListRows
              }) }}
          </div>
        </article>
      {% endfor %}
    {% endif %}
  </div>
</div>

{% endblock %}
